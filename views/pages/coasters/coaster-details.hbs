<div class="container coasters-index">

  <h1 style="font-weight: 100">{{coaster.name}}</h1>

  <h4>Descripción</h4>
  <p>{{coaster.description}}</p>
  <p><strong>Longitud: </strong> {{coaster.length}}m | <strong>Inversiones: </strong> {{coaster.inversions}}</p>

  <hr>

  <h5>Sobre el parque</h5>
  <p><strong>Nombre</strong>: {{coaster.park_id.name}}</p>
  <p><strong>Descripción</strong>: {{coaster.park_id.description}}</p>

  <div class="row">
    <form action="/coasters/{{coaster._id}}/delete" method="POST" class="col-12 col-sm-6 col-md-4">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <form action="/coasters/{{coaster._id}}/edit" method="GET" class="col-12 col-sm-6 col-md-4">
      <button type="submit" class="btn btn-warning">EDIT</button>
    </form>

    <a href="/coasters" class="btn btn-dark">Volver</a>
  </div>
</div>